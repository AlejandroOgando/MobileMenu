<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pract4_mobile.Views.MenuView">
    <StackLayout>
        <Image Source="{Binding Image}" HeightRequest="90"/>
        <Label Text="{Binding Title}" Style="{StaticResource HeaderLabelStyle}"/>
        <Label Text="{Binding Detail}" Style="{StaticResource DetailLabelStyle}"/>
    </StackLayout>
</Frame>